    "deploy": "bunx wrangler deploy",
    "prepare": "husky install"
  },
  "dependencies": {
    "@earth-app/ocean": "^1.0.0-081b31b",
    "@nuxt/icon": "^1.15.0",
    "@nuxt/ui": "^3.2.0",
    "@nuxtjs/google-fonts": "^3.2.0",
    "@tailwindcss/vite": "^4.1.11",
    "nuxt": "^3.17.5",
    "tailwindcss": "^4.1.11",
    "tailwindcss-motion": "^1.1.1",
    "vue": "^3.5.17",
    "vue-router": "^4.5.1"
  },
  "devDependencies": {
    "@iconify-json/lucide": "^1.2.54",
    "husky": "^9.1.7",
	"lint-staged": "^16.1.2",
    "prettier": "^3.6.2",
    "wrangler": "^4.22.0"
  },
  "lint-staged": {
    "*.{js,ts,json,yml,vue}": "prettier --write"
  }

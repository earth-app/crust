{
  "name": "crust",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "bunx nuxi dev --dotenv .config/local.env --no-restart --host --port 3000",
    "build": "nuxt build",
    "postinstall": "nuxt prepare",
    "prettier": "bunx prettier --write .",
    "prettier:check": "bunx prettier --check .",

{
	"extends": "./.nuxt/tsconfig.app.json",
	"compilerOptions": {
		"declaration": true,
		"emitDeclarationOnly": true,
		"declarationMap": true,
		"module": "esnext",
		"moduleResolution": "bundler",
		"types": ["node"],
		"target": "esnext",
		"strict": true,
		"skipLibCheck": true
	},
	"include": [
		"src/lib.ts",
		"src/composables/**/*.ts",
		"src/shared/**/*.ts",
		".nuxt/imports.d.ts",
		".nuxt/nuxt.d.ts"
	],
	"exclude": [
		"src/composables/useSiteTour.ts",
		"src/composables/useTurnstile.ts",
		"src/composables/useTitleSuffix.ts"
	]
}
